{% extends 'admin/layout.twig' %}
{% block content %}
    <div class="row">
        <div class="page-header">
            <h1>{{ app.translator.trans('Categories') }}</h1>
        </div>
    </div>

    <div class="row">
        <div class="cat-tree col-md-4">
            <ul>
                {% for category in categories %}
                    <li><a href="/admin/categories/{{ category.id }}">{{ category.title }}</a></li>
                {% endfor %}
            </ul>
        </div>
        <div class="col-md-8">
            <h2>{{ title }}</h2>
            <div role="tabpanel">

                <ul class="nav nav-tabs" role="tablist">
                    <li role="presentation" class="active">
                        <a href="#information" data-toggle="tab" role="tab" aria-controls="information">Basic Information</a>
                    </li>
                    <li role="presentation">
                        <a data-toggle="tab" role="tab" href="#metadata" aria-controls="metadata">Metadata</a>
                    </li>
                    <li role="presentation"></li>
                </ul>
                {{ form_start(form) }}
                {{ form_row(form.id) }}
                <div class="tab-content">
                    <div role="tabpanel" class="tab-pane active" id="information">
                        {{ form_row(form.title) }}
                        {{ form_row(form.parent) }}
                        {{ form_row(form.urlKey) }}
                        {{ form_row(form.active) }}
                    </div>
                    <div role="tabpanel" class="tab-pane" id="metadata">
                        {{ form_widget(form) }}
                    </div>
                </div>
                <button type="submit" class="btn btn-default">Save Category</button>
            {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
{% block javascript %}
    <script type="text/javascript">
        $(function() {
            $('.nav-tabs a').on('click', function (e) {
                e.preventDefault();
                $(this).tab('show');
            });
        });
    </script>
{% endblock %}

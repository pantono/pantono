<table {% for attribute_name,attribute_value in table.attributes %}{{ attribute_name }}="{{ attribute_value }}"{% endfor %}>
<thead>
<tr>
    {% for column in table.headers %}
        <th>{{ column }}</th>
    {% endfor %}
    {% if table.hasActions %}
        <th></th>
    {% endif %}
</tr>
</thead>
<tbody>
{% for row in table.getRows %}
    <tr>
        {% for column in row.getCells %}
        <td>{% if column.isCurrency %}{{ currency(column.getRenderedContent) }}{% else %}{{ column.getRenderedContent }}{% endif %}</td>
        {% endfor %}
        {% if row.hasActions %}
            <td>{{ row.getActionString|raw }}</td>
        {% endif %}
    </tr>
{% endfor %}
</tbody>
</table>
